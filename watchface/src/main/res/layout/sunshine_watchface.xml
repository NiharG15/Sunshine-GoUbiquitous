<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="32dp"
        android:textSize="44sp"
        tools:text="10:14" />

    <TextView
        android:id="@+id/dateText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="92dp"
        android:textSize="16sp"
        tools:text="Sat, Jun 4 2016" />

    <FrameLayout
        android:layout_height="1dp"
        android:layout_width="156dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/separator"
        android:layout_marginTop="120dp" />

    <ImageView
        android:id="@+id/weatherCondition"
        android:layout_height="50dp"
        android:layout_width="50dp"
        tools:src="@drawable/preview_digital"
        android:layout_gravity="top|start"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:contentDescription="@string/cd_weather_condition" />

    <TextView
        android:id="@+id/highTempText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="138dp"
        android:layout_marginStart="8dp"
        android:textSize="26sp"
        tools:text="28°" />

    <TextView
        android:id="@+id/lowTempText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="138dp"
        android:layout_marginStart="56dp"
        android:textSize="24sp"
        android:textColor="@color/semitrans_white"
        tools:text="16°" />
</FrameLayout>